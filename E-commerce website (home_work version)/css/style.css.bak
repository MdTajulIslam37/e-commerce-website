body{
	margin:0;
	font-family:arial; 
	text-align:center;
	font-size:25px;
}
.menu{
	width:100%;
	background-color:#b8ffcb;

}
.menu ul{
	list-style:none;
	float:center;
	/* margin:0; */
	/* padding:10px; */
	display:flex;
}
.menu ul li a{
	line-height:40px;
	color:black;
	text-decoration:none;
	font-size:15px;
	padding:10px;
	font-weight:blod;
	text-transform:uppercase;
}
.menu ul li a:hover{
	background:#dcfae4;
	border-radius:12px;
}
.full{
	width:80%;
	margin:auto; }
.total{
	width: 100%; 
	border:2px solid gray;
	float: left; 
	padding:20px; }
.category{
	width: 100%; 
	float: left; 
	text-align:center; 
	margin:auto;}
.products{
	width: 20%; 
	float: left;  
	padding: 10px; 
	margin-left:20px;}
